    kind react
    # This is the Link API
    import Link from 'next/link'
    import Layout from '../components/MyLayout.js'
    import Header from '../components/Header'

    const PostLink
        => 
            param props
            li 
                < Link 
                    @ href
                        `lit 
                            + /post?title=
                            @ props.title
