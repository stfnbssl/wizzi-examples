                                @ title "Deploy apps with Zeit"

                    < Layout 
                        p 
                            + Hello Next.js

                        div
                            < Header
                            p Hello Next.js
                            div 
                                < Link 
                                    @ href "/about"
                                    a 
                                        + About Page
                                < Link 
                                    @ href "/about"
                                    @ title "About Page"
                                    a 
                                        + About Page
                                < Link 
                                    @ href "/about"
